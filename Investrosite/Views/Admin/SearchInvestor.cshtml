@model IEnumerable<Investrosite.Models.Database.Investor>
@{
    ViewBag.Title = "SearchInvestor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>SearchInvestor</h2>
<div class="container mt-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> ID</th>
                        <th> Name</th>
                        <th> Email</th>
                        <th> Phone</th>
                        <th> Role</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td> @p.Id</td>
                            <td> @p.Name</td>
                            <td> @p.Email</td>
                            <td> @p.Phone</td>
                            <td> @p.Role</td>
                            <td><a href="/Admin/DeleteEntrepreneur/@p.Id" style="color:red">Delete</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
